<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:fillViewport="true">

<RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playback"
        android:id="@+id/playbackTV"
		android:layout_gravity="center"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/playbackInfoTV"
		android:id="@+id/playbackInfoTV"
		android:layout_margin="5dp"
		android:layout_below="@+id/playbackTV"
		android:layout_centerHorizontal="true"/>

	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/borderColor"
		android:layout_below="@+id/playbackInfoTV"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/controlButtonsTV"
		android:id="@+id/controlButtonsTV"
		android:layout_below="@+id/playbackInfoTV"
		android:layout_centerHorizontal="true"
		android:layout_gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play"
        android:id="@+id/playButton"
		android:layout_below="@+id/controlButtonsTV"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        android:id="@+id/stopButton"
		android:layout_below="@+id/controlButtonsTV"
		android:layout_toRightOf="@+id/playButton"
		android:layout_toEndOf="@+id/playButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        android:id="@+id/prevButton"
		android:layout_below="@+id/playButton"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/next"
		android:id="@+id/nextButton"
		android:layout_below="@id/playButton"
		android:layout_toRightOf="@+id/prevButton"
		android:layout_toEndOf="@+id/prevButton"/>

	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/borderColor"
		android:layout_below="@+id/prevButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/volume"
        android:id="@+id/volumeTV"
		android:layout_below="@+id/prevButton"
		android:layout_gravity="center"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mute"
        android:id="@+id/muteButton"
		android:layout_below="@+id/volumeTV"
        android:checked="false"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/louder"
        android:id="@+id/louderButton"
		android:layout_below="@+id/muteButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quieter"
        android:id="@+id/quieterButton"
		android:layout_below="@+id/muteButton"
		android:layout_toRightOf="@+id/louderButton"
		android:layout_toEndOf="@+id/louderButton"/>

	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/borderColor"
		android:id="@+id/viewUnderLouder"
		android:layout_below="@+id/louderButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/backApp"
		android:layout_below="@id/viewUnderLouder"
		android:layout_centerHorizontal="true"/>
</RelativeLayout>
</ScrollView>